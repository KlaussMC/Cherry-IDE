<div class="editor_view">

    <div class="editor_tool_bar">
        <tool><b>B</b></tool>
        <tool><i>I</i></tool>
        <tool><strike>S</strike></tool>
        <tool class="zoom-in-btn">+</tool>
        <tool><input class="zoom" type="range" min="12.5" max="1000" step="12.5" value="100"/></tool>
        <tool class="zoom-out-btn">-</tool>
    </div>

    <div class="editor_page_view">
        <textarea class="edit_raw" autofocus="true"></textarea>
        <div class="page">
            $content
            <span class="editor_cursor"></span>
