<div class="editor_view">
	<link rel="stylesheet" href="/css/editor.css" />

	<div class="editor_tool_bar">
		<div class="toolgroup">
			<tool class="bold">B</tool>
			<tool class="italic">I</tool>
			<tool class="strikethrough">S</tool>
			<tool class="underline">U</tool>
		</div>

		<div class="toolgroup">
			<tool class="font-size"><input min="2" type="number" value="11"></input></tool>
		</div>

		<div class="toolgroup">
			<tool class="zoom-out-btn">-</tool>
			<tool class="zoom-slider"><input class="zoom" type="range" min="12.5" max="1000" step="12.5" value="100"/></tool>
			<tool class="zoom-in-btn">+</tool>
		</div>
	</div>
	<div class="editor_page_view">
		<!--<div class="page" contenteditable="true">$content</div>-->
		<div class="page" contenteditable="true">$content</div>
	</div>
</div>